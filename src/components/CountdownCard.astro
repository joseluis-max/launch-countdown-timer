---
interface Props {
  unit: string;
  label: string;
}

const { unit, label } = Astro.props;
---

<div class="countdown-item">
  <div class="countdown-card">
    <div class="card-top">
      <div class="countdown-number" id={`${unit}-top`}>00</div>
    </div>
    <div class="card-bottom">
      <div class="countdown-number" id={unit}>00</div>
    </div>
    <div class="card-next">
      <div class="countdown-number" id={`${unit}-next`}>00</div>
    </div>
  </div>
  <div class="countdown-label">{label}</div>
</div>

<style lang="scss">
  @import "../styles/variables";

  .countdown-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    position: relative;

    @media (max-width: $breakpoint-mobile) {
      gap: 1rem;
    }
  }

  .countdown-card {
    background: $dark-desaturated-blue;
    border-radius: 0.5rem;
    position: relative;
    box-shadow: 0 8px 0 rgba(0, 0, 0, 0.3);
    min-width: 140px;
    height: 140px;
    perspective: 400px;
    display: flex;
    align-items: center;
    justify-content: center;

    @media (max-width: $breakpoint-tablet) {
      min-width: 120px;
      height: 120px;
    }

    @media (max-width: $breakpoint-mobile) {
      min-width: 70px;
      height: 70px;
    }
  }

  // Middle line
  .countdown-card::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: rgba(0, 0, 0, 0.2);
    z-index: 3;
  }

  // Side circles using pseudo elements on parent
  .countdown-item::before,
  .countdown-item::after {
    content: "";
    position: absolute;
    top: 45%;
    width: 12px;
    height: 12px;
    background: $very-dark-blue;
    border-radius: 50%;
    transform: translateY(-50%);
    z-index: 4;
    margin-top: -0.75rem;

    @media (max-width: $breakpoint-mobile) {
      width: 8px;
      height: 8px;
      margin-top: -0.5rem;
    }
  }

  .countdown-item::before {
    left: 0;
    margin-left: -0.4rem;
  }

  .countdown-item::after {
    right: 0;
    margin-right: -0.4rem;
  }

  .card-top,
  .card-bottom,
  .card-next {
    position: absolute;
    width: 100%;
    height: 50%;
    overflow: hidden;
    background: $dark-desaturated-blue;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-top {
    top: 0;
    border-radius: 0.5rem 0.5rem 0 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    transform-origin: bottom;
    transform-style: preserve-3d;
    z-index: 2;

    .countdown-number {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 200%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  .card-bottom {
    bottom: 0;
    border-radius: 0 0 0.5rem 0.5rem;
    z-index: 1;

    .countdown-number {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 200%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  .card-next {
    top: 0;
    border-radius: 0.5rem 0.5rem 0 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    z-index: 0;
    opacity: 0;

    .countdown-number {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 200%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  .card-next.visible {
    opacity: 1;
    z-index: 1;
  }

  .card-top.flipping {
    animation: flipDown 0.6s ease-in-out;
  }

  @keyframes flipDown {
    0% {
      transform: rotateX(0deg);
    }
    100% {
      transform: rotateX(-180deg);
    }
  }

  .countdown-number {
    color: $soft-red;
    font-size: 5rem;
    font-weight: $font-weight-bold;
    line-height: 1;
    text-align: center;

    @media (max-width: $breakpoint-tablet) {
      font-size: 4rem;
    }

    @media (max-width: $breakpoint-mobile) {
      font-size: 2.25rem;
    }
  }

  .countdown-label {
    color: $grayish-blue;
    font-size: 0.875rem;
    letter-spacing: 0.3rem;
    font-weight: $font-weight-bold;
    text-align: center;

    @media (max-width: $breakpoint-mobile) {
      font-size: 0.5rem;
      letter-spacing: 0.2rem;
    }
  }
</style>
